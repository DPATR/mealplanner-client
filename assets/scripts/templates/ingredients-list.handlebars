{{#each ingredients as |ingredient|}}
    <div class="col-xs-12 col-md-6 col-lg-4" data-id="{{ingredient.id}}">
      {{#if ingredient.id}}
        <h3 id="ingredientitem" class="handlebarsIngredient">{{ingredient.ingredient}}</h3>
      {{else}}
        <p id="ingredmsg">You have no groceries to display!</p>
      {{/if}}
      <div>
      <button class="removeIngredientEvent meal-button" id="{{ingredient.id}}">Remove</button>
      <button class="ingExternalLink" id="{{ingredient.url}}">{{ingredient.label}}</button>
      </div>
      <div>
      <button class="editIngEvent ingredient-button" id="{{ingredient.id}}">Edit</button>
      <button class="ingExternalLink2" id="{{ingredient.url2}}">{{ingredient.label2}}</button>
      </div>
      <br>
      <br>
    </div>
{{/each}}
